{
  "name": "hk-job-pro",
  "version": "1.0.0",
  "description": "Modern job recruitment platform connecting job seekers with employers",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:security": "npm audit && echo 'Security audit completed'",
    "test:accessibility": "echo 'Accessibility tests - to be implemented with axe-core'",
    "test:performance": "echo 'Performance tests - to be implemented with Lighthouse CI'",
    "test:all": "npm run test:coverage && npm run test:e2e && npm run test:security",
    "test:supabase": "cd tests/supabase && node test-runner.js",
    "test:supabase:schema": "cd tests/supabase && npx jest database-schema.test.js --verbose",
    "test:supabase:rls": "cd tests/supabase && npx jest rls-policies.test.js --verbose",
    "test:supabase:functions": "cd tests/supabase && npx jest functions-triggers.test.js --verbose",
    "test:supabase:storage": "cd tests/supabase && npx jest storage-buckets.test.js --verbose",
    "db:setup": "node scripts/setup-database.js",
    "db:test": "node scripts/test-database.js",
    "db:verify": "node scripts/verify-setup.js",
    "db:simple-test": "node scripts/simple-test.js"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/supabase-js": "^2.45.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.6.0",
    "dotenv": "^17.2.1",
    "lucide-react": "^0.400.0",
    "next": "^14.2.0",
    "next-intl": "^4.3.5",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-hook-form": "^7.52.0",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^2.10.5",
    "postcss": "^8.4.0",
    "prettier": "^3.3.0",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=18.17.0"
  }
}
